<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/view_pic__iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@color/purple_200"/>

    <TextView
        android:id="@+id/view_pic__tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view_pic__iv"
        app:layout_constraintTop_toBottomOf="@+id/view_pic__iv"
        app:layout_constraintStart_toStartOf="@+id/view_pic__iv"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="1dp"
        tools:text="text 1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>